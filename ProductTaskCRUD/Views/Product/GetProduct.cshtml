@model List<Product>
@{
    if (Model.Count == 0)
    {
        <h2 class="text-center text-info">Product is not found !</h2>
    }


    for (int i = 0; i < Model.Count; i++)
    {
         <div class="card m-3 bg-secondary text-white" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img style="width: 230px; height: 100%; object-fit: contain" src="@Url.Content( Model[i].ImageURl == null ? "~/image/imageError.png" : Model[i].ImageURl)" class="img-fluid rounded-start" alt="..." />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-secondary text-white">Product Id: @Model[i].Id</li>
                            <li class="list-group-item bg-secondary text-white">Name: @Model[i].Name</li>
                            <li class="list-group-item bg-secondary text-white">Category: @Model[i].Category</li>
                            <li class="list-group-item bg-secondary text-white">Price: @Model[i].Price $</li>
                            <li class="list-group-item bg-secondary text-white">Count: @Model[i].Count</li>
                            <li class="list-group-item bg-secondary text-white text-truncate">Description: @Model[i].Description</li>
                            <li class="list-group-item bg-secondary text-white">Last Update: @Model[i].dateOfAddition</li>
                            <li class="list-group-item bg-secondary text-white">
                            <li class="list-group-item bg-secondary text-white">
                                <a class="btn btn-primary m-auto" style="width:45%" asp-controller="Product" asp-action="SearchProduct">Close</a>
                                <a class="btn btn-primary m-auto" style="width:45%" href="@Url.Action("Show","Product", Model[i])">Show</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            </div>


      


    }

}